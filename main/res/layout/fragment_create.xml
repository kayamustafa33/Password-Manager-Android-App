<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Fragment.CreateFragment">

    <EditText
        android:id="@+id/createTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter title"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:drawableStart="@drawable/ic_baseline_title_24"
        android:background="@drawable/generate_bg"
        android:drawablePadding="12dp"
        android:paddingStart="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:id="@+id/createPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:background="@drawable/generate_bg"
        android:drawablePadding="12dp"
        android:layout_marginTop="20dp"
        android:paddingStart="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createPasswordBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bg"
        android:layout_marginEnd="50dp"
        android:text="Create Password"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"/>

</LinearLayout>